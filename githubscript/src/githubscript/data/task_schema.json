{
    "title": "Githubscript task schema",
    "type": "object",
    "properties": {
        "scopes": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "payload": {
            "type": "object",
            "properties": {
                "diff-task": {
                    "type": "string"
                },
                "test-task": {
                    "type": "string"
                },
                "fuzz-task": {
                    "type": "string"
                },
                "fuzz-tasks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "task-id": {
                                "type": "string"
                            },
                            "extra-args": {
                                "type": "string"
                            }
                        },
                        "required": ["task-id"],
                        "additionalProperties": false
                    }
                },
                "extra-args": {
                    "type": "string"
                },
                "world-name": {
                    "type": "string"
                },
                "world-version": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    }
}
